pipeline{
    agent any
    environment {
        PATH  = "$PATH:/usr/share/maven/bin"
    }
    stages{
        stage('GetCode'){
            steps{
                git branch: 'main', url: 'https://github.com/adeshbagale/webapp-edureka.git'
            }
            
        }
        stage('Build'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('Sonar Analysis'){
            steps{
                withSonarQubeEnv('SonarQube Scanner') {
                sh '''
                mvn clean install
                mvn sonar:sonar
                '''
            }
            } 
        }
    }
}
